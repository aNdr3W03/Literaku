<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Literaku.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4897FF"
    android:theme="@style/Theme.Literaku.AppWidgetContainer">

    <LinearLayout
        android:id="@+id/widgetView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/circle_custom"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:background="@drawable/circle_custom"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/logo"
                    app:srcCompat="@drawable/logo" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/cta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:fontFamily="@font/poppins_semibold"
            android:text="LITERAKU"
            android:textColor="@color/white"
            android:textSize="36dp" />

    </LinearLayout>

</RelativeLayout>